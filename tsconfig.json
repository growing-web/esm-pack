{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2017",
    "lib": ["ESNext"],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "pretty": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "types": ["node"]
  },
  "include": ["packages"],
  "exclude": ["**/dist/**", "node_modules"],
  "compileOnSave": false
}
