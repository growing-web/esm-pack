{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "incremental": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types/", "./types"]
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "dist", ".analyze"]
}
